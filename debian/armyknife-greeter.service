[Unit]
Description=COSMIC Greeter
After=systemd-user-sessions.service plymouth-quit-wait.service armyknife-greeter-daemon.service
After=getty@tty1.service
Conflicts=getty@tty1.service
Wants=armyknife-greeter-daemon.service

[Service]
Type=simple
ExecStart=greetd --config /etc/greetd/armyknife-greeter.toml
IgnoreSIGPIPE=no
SendSIGHUP=yes
TimeoutStopSec=30s
KeyringMode=shared
Restart=always
RestartSec=1
StartLimitBurst=5
StartLimitInterval=30

